<div class="row">
  <%= form_tag create_rate_path, method: :post, remote: true do %> 
    <%= hidden_field_tag 'rate[film_id]', local_options.fetch(:film).id %>
    <div class="input-group d-flex">
      <%= number_field_tag 'rate[rate]', 10, in: 1..10, class: 'form-control' %>
      <%= submit_tag 'Rate', class: 'btn btn-outline-primary' %>          
    </div>
  <% end %> 

</div>
